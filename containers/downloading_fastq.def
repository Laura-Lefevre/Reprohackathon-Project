Bootstrap: docker
From: ubuntu:22.04

%labels
    Author "Camille LE CORRE"
    Description "Singularity container to download FastQ files with sra-tools"

%post
    apt-get update && apt-get install -y sra-toolkit
    apt-get clean && rm -rf /var/lib/apt/lists/*

%environment
    export PATH=/usr/bin:$PATH