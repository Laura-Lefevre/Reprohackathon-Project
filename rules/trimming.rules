rule trimming:
    input:
        fastq="output/fastq/{srr}.fastq"
    output:
        trimmed_fastq="output/trimmed/{srr}_trimmed.fq"
    threads: THREADS
    container:
        f"{ZENODO_URL}{SIF_LIST[1]}"
    params:
        outdir="output/trimmed",
        quality=20,
        phred=33,
        minlen=25
    shell:
        """
        echo "Trimming {input.fastq} with cutadapt..."
        
        cutadapt -j {threads} -m 25 -q {params.quality} -o {output.trimmed_fastq} {input.fastq}
        
        echo "Trimming complete for {wildcards.srr}"
        """